{
  "browser_specific_settings": {
    "gecko": {
      "id": "automaticdark-fork@quinnoshea.dev",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "manifest_version": 2,
  "name": "automaticDark - Time-Based Theme Changer",
  "version": "1.4.3",
  "homepage_url": "https://github.com/quinnoshea/time-based-themes/",
  "description": "Automatically change Firefox's theme based on the time",

  "icons": {
    "300": "img/automaticDark-op-tbg-300.png"
  },

  "permissions": [
    "alarms",
    "browserSettings",
    "management",
    "storage",
    "theme"
  ],

  "background": {
    "scripts": ["js/utils.js", "js/common.js", "js/system-theme-controller.js", "lib/suncalc.js", "js/background.js"]
  },

  "options_ui": {
      "page": "html/options.html",
      "open_in_tab": true
  }
}
